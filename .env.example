# Application Configuration
APP_NAME="Rainlo"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=rainlo
DB_USERNAME=postgres
DB_PASSWORD=

# Cache Configuration
CACHE_STORE=file
CACHE_PREFIX=rainlo

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@rainlo.app"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://rainlo.app"



# File Upload Limits
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,webp"

# Tax Calculation Cache (in seconds)
TAX_RATES_CACHE_TTL=86400

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Security
BCRYPT_ROUNDS=12

# Development/Testing
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
