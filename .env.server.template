# Production Environment Template for Server
# Copy this to .env.production on your server and fill in the values

APP_NAME="Rainlo API"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_ACTUAL_KEY
APP_DEBUG=false
APP_URL=https://api.rainlo.app

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=rainlo
DB_USERNAME=rainlo
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# MySQL Root Password
MYSQL_ROOT_PASSWORD=REPLACE_WITH_SECURE_ROOT_PASSWORD

# Cache and Session (using file storage)
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=info

# Mail Configuration (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@rainlo.app
MAIL_FROM_NAME="Rainlo"

# Security
BCRYPT_ROUNDS=12
